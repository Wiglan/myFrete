<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imgValor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_money" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/editText3"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="9dp"
                android:layout_marginStart="24dp"
                android:text="Valor  R$"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                 />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/textView2"
                android:ems="10"
                android:inputType="numberDecimal"
                android:paddingRight="15dp"
                android:text="136.45"
                android:textSize="22sp" />

        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:background="#ff9703" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imgCalendario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_calendario" />


            <TextView
                android:id="@+id/txtDataLcto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="9dp"
                android:layout_marginStart="24dp"
                android:text="22 de Dezembro"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/txtHorarioLCto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:gravity="right"
                android:layout_alignBottom="@+id/editText3"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="9dp"
                android:paddingRight="20dp"
                android:layout_marginStart="24dp"
                android:text="15:30"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                />

        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:background="#ff9703" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imgTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_tag" />


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="45dp"
                >
            </Spinner>


        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:background="#ff9703" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgObs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_observacao" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="9dp"
                android:layout_marginStart="24dp"
                android:text="Observações"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                />

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtObsLcto"
            android:inputType="textMultiLine"
            android:hint="Nota numero 12331, Posto Guarani"
            />

        <View
            android:id="@+id/view2"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:background="#ff9703" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            >


            <Button
                android:id="@+id/btCancelarLcto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="ffffff"
                android:text="Cancelar"
                android:textSize="16dp"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:textColor="#000000"
                />

            <Button
                android:id="@+id/btExcluirLcto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="ffffff"
                android:text="Excluir"
                android:textSize="16dp"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:textColor="#FF0000"
                android:layout_marginLeft="15dp"
                />

            <Button
                android:id="@+id/btSalvarLcto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="ffffff"
                android:text="Salvar"
                android:textSize="16dp"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:textColor="#3333FF"
                />


        </LinearLayout>



    </LinearLayout>


</RelativeLayout>