<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.wfrete.wfrete2.activity.CategoriaCadastrarActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categoria"
        android:textColor="#000000"
        android:textSize="16dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtNomeCategoria"
        android:hint="Ex: PedÃ¡gio"
        android:textColor="#000000"
        android:inputType="textCapSentences|textAutoCorrect|textAutoComplete"
        android:textSize="20dp"

        />

    <TextView
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informe o Tipo da Categoria"
        android:textColor="#000000"
        android:textSize="16dp"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:id="@+id/rbDespesaCategoria"
            android:text="Despesa"
            android:checked="true"
            android:textColor="#FF0000"
            android:textSize="18dp"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbReceitaCategoria"
            android:text="Receita"
            android:textColor="#0000FF"
            android:textSize="18dp"
            />

    </RadioGroup>


    <LinearLayout
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:text="Cancelar"
            android:id="@+id/btCancelarCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btCancelarOnClick"
            />

        <Button
            android:text="Salvar"
            android:id="@+id/btSalvarCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btSalvarOnClick"
            />

    </LinearLayout>

</LinearLayout>